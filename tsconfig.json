{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": false,
    "typeRoots": ["./typings"],
    "paths": {
      "@hooks": ["./src/hooks"],
      "@src/*": ["./src/components/*"],
      "@utils": ["./src/utils"],
      "@apis": ["./src/http/api"]
    }
  },
  "exclude": ["**/**/*.md"]
}
